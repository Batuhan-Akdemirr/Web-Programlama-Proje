@model IEnumerable<ePizzaHub.Entities.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Siparişlerim</h1>

@if (Model != null && Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>

                <th>
                    Ödeme Numarası
                </th>
                <th>
                    Cadde
                </th>
                <th>
                    Posta Kodu
                </th>
                <th>
                    Konum
                </th>
                <th>
                   Telefon Numarası
                </th>
                <th>
                   Oluşturulma Tarihi
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Street)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ZipCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Locality)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="row">
        <div class="col-sm-12 mt-4">
            <p style="min-height:300px">
                Henüz sipariş vermediniz.Lütfen menüden ürün seçiniz. <br><br>
                <a href="/" class="btn btn-primary">Browse Menu</a>
            </p>
        </div>
    </div>
}